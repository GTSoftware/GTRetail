<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>GTRetail</artifactId>
        <groupId>ar.com.gtsoftware</groupId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>
    <organization>
        <name>GT Software</name>
        <url>http://www.gtsoftware.com.ar</url>
    </organization>
    
    <developers>
        <developer>
            <id>rodrigo</id>
            <name>Rodrigo M. Tato Rothamel</name>
            <email>rotatomel@gmail.com</email>
            <url>http://rotatomel.blogspot.net</url>
            <organization>GTSoftware</organization>
            <organizationUrl>http://www.gtsoftware.com.ar</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
            <timezone>-3</timezone>
      
        </developer>
    </developers>
    
    <groupId>ar.com.gtsoftware</groupId>
    <artifactId>GTRetail-ear</artifactId>
    <version>2.0.1-SNAPSHOT</version>
    <packaging>ear</packaging>

    <name>GTRetail-ear</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <version>6</version>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <modules>
                        <ejbModule>
                            <groupId>ar.com.gtsoftware</groupId>
                            <artifactId>GTRetail-ejb</artifactId>
                            <uri>GTRetail-ejb.jar</uri>
                        </ejbModule>

                        <!-- Register GRC Web Application -->
                        <webModule>
                            <groupId>ar.com.gtsoftware</groupId>
                            <artifactId>GTRetail-web</artifactId>
                            <uri>GTRetail-web.war</uri>
                            <contextRoot>/GTRetail</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>ar.com.gtsoftware</groupId>
            <artifactId>GTRetail-ejb</artifactId>
            <version>2.0.1-SNAPSHOT</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>ar.com.gtsoftware</groupId>
            <artifactId>GTRetail-web</artifactId>
            <version>2.0.1-SNAPSHOT</version>
            <type>war</type>
        </dependency>
    </dependencies>
</project>
